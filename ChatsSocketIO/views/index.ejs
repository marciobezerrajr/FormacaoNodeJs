<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>

<style>
    #chat {
        width: 1280px;
        height: 640px;
        /* max-height: 700px;
        max-width: 700px; */
        background-color: red;
        overflow-y: scroll;
        padding: 20px;
    }

    input {
        margin: 10px 0;
        padding: 5px;
    }
</style>

<body>
    <div class="container"><br>
        <h1>Chat do NodeJs</h1><br>

        <div id="chat">

        </div>
        <div class="form-row">
            <div class="control-group">
                <input type="text" name="" id="msg" class="form-group col-md-10"><br>

                <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio"
                    class="form-group col-md-4"><br><br>
            </div>
        </div>

        <button onclick="enviar()" class="btn btn-primary btn-lg btn-block">Enviar</button>
    </div>

</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.3.1/socket.io.js"></script>
<script>
    // conectando front com o backend
    var socket = io('http://localhost:3000')

    socket.on("disconnect", () => {
        console.log('desconectado')
    })
    socket.on('showmsg', (data) => {
        var chat = document.getElementById('chat')
        var p = document.createElement('p')
        p.innerHTML = data.username + ": " + data.msg
        chat.append(p)
    })

    function enviar() {
        var msg = document.getElementById('msg').value
        var username = document.getElementById('username').value

        socket.emit('msg', { msg, username })

    }

</script>

</html>